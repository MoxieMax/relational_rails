<h1>Edit Author</h1>

  <%= form_with url: "/books/#{@book.id}", method: :patch, local: true do |form| %>
    <%= form.label :title  %>
    <%= form.text_field :title, value: @book.title %><br>
    
    <%= form.label :publish_date %>
    <%= form.text_field :publish_date, value: @book.publish_date %><br>
    
    <%= form.label :pages %>
    <%= form.number_field :pages, value: @book.pages %><br>
    
    <%= form.label :in_series %>
    <%= form.check_box :in_series, value: @book.in_series %><br>
    
    <%= form.submit 'Update Book' %>
  <% end %>